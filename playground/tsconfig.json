{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2021"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/webviews",
  ],
}