{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "outDir": "out",
    "lib": [
      "es2022",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "paths": {
      "@mui/material": [
        "./node_modules/@mui/joy"
      ]
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/webviews",
  ],
}